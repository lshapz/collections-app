<% if flash[:notice] %>
  <% flash[:notice].each do |notice| %>
    <div class="notice">
      <li><%= notice %></li>
    </div>
  <% end %>
<% end %>

<br>

<%= form_for @card do |f| %>

  <div class="container">
    <% @card_options.each_slice(3) do |three_cards| %>
    <div class="row">
      <% three_cards.each do |card| %>
        <div class="col-lg-4">
          <span class="image-radio">
            <%= f.radio_button :image_url, card[1], id: card[1] %>
            <label for=<%=card[1]%>><%= image_tag(card[1]) %></label>
          </span>
        </div>
      <% end %>
    </div>
    <br>
    <% end %>
  </div>

  <%= hidden_field_tag :name, @card_options.first.first %>
  <%= hidden_field_tag :brand_id, @brand.id %>
  <%= f.label :count %>
  <%= f.number_field :count %>
<%= f.submit "Submit", :disable_with => 'Submitting...' %>
<% end %>
