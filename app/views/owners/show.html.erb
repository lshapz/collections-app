<h1><%= @owner.name %></h1>
<h2>Collections:</h2>
<ul>
<% @owner.brands.each do |brand| %>
<li><%= link_to brand.category, brand_path(brand) %></li>
<ul><% brand.cards.each do |card| %>
<li><%= link_to card.name, card_path(card) %></li>
      <% if card.decks %>
       <ul> <% card.decks.uniq.each do |deck| %>
          <li>featured in the <%= link_to deck.name, deck_path(deck) %> deck</li>
        <% end %></ul>
      <% end %>
<% end %></ul>
<br>
<% end %></ul>

<% if @owner.user_id == current_user.id  %>
<p><%= link_to "Create A New Card", new_card_path %></p>
<p><%= link_to "Create a New Collection", new_brand_path  %></p>
<p><%= link_to "Create a New Deck", new_deck_path  %></p>

<% end %>



<%= column_chart(@cards) %>